<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Advertiser</th>
      <th>Campaign</th>
      <th>Date</th>
      <th>Impressions</th>
      <th>Clicks</th>
      <th>Installs</th>
      <th>Cost micros</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.advertiser.name %></td>
        <td><%= report.campaign.name %></td>
        <td><%= report.date %></td>
        <td><%= report.impressions %></td>
        <td><%= report.clicks %></td>
        <td><%= report.installs %></td>
        <td><%= report.cost_micros %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

